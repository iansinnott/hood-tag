// Note: Code sections in this file are meant for folding, specifically with
// Vim. If you're not using Vim it's likely that thre brackets seem a bit much,
// but beleive me, it works great in Vim.

// Reset
global-reset()

// Bring in the Jeet!
@require 'jeet'

// Variables {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

$font = 'Helvetica Neue', Helvetica, Arial, sans-serif
code-font = "Courier New", "Menlo", monospace

// Colors
gray = #EEEEEE
light-gray = #dadada

// }}} END Variables

// General {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

*
  box-sizing border-box
html
body
  height 100%
  min-width 1040px
body
  font-family $font

.slide-down
  display none

.alert
  color white
  padding 10px
  border-radius 3px
.alert-success
  background green
  border 1px solid darken(green, 10%)
  color lighten(green, 80%)
.alert-error
  background red
  border 1px solid darken(red, 10%)
  color lighten(red, 80%)

.container
  max-width 800px
  margin 0 auto

nav
  li
    display inline-block
    &:first-child
      a
        padding-left 0
    &:last-child
      a
        margin-right 0
  a
    display block
    padding-right 10px
    padding-left 10px

a
  color blue
  &:hover
    text-decoration none

h1
h2
h3
p
  color black
  margin-bottom 20px
  &.center
    text-align center

h1
  font-size 48px
  font-weight 500
h2
  font-size 28px
  font-weight 500
h3
  font-size 24px
p
  font-size 18px
  line-height 1.4

.code
  font-family code-font

// }}} END General

// Main {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -


maroon = #7A1E48
orange = #F38630
pondwater = #A7DBD8

#header
  background white
  padding-top 10px
  padding-left 20px

  h2
    margin 0

.input-group

  // We don't take kindly to labels, but screen readers do. Hopefully they can
  // handle single page apps :o
  label
    display none

.container
  margin 0 auto
  max-width 1000px

#logo
  width 190px
  height auto

#hoods
  margin-top 30px
#taglines
  margin-top 0px

#hoods
  float left
  width 70%
  border-right 1px solid pondwater

#taglines
  float right
  width 30%
  padding-left 20px

input
  outline none
  border none
  border-radius 3px
  font-size 18px

.input-group
  input
    width 100%
    padding 10px
    border 3px solid lighten(orange, 20%)
    &:focus
      border-color orange

// }}} END Main

// Taglines {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

button
  display block
  outline none
  border none
  background transparent
  padding 0
  cursor pointer
  &:hover
    color red

.loginButtons
  float right

.tagline.hover
.tagline.voted
  .vote
    display block

.tagline
  position relative
  font-size 22px
  line-height 1.5
  display block
  padding 10px
  margin-left -20px
  padding-left 30px
  .vote
    position absolute
    left 5px
    display none
  i
    font-size 15px
    line-height 1
  span
    position relative
    &:before
    &:after
      content '“'
      position absolute
      left -10px
      color red
      top -5px

    &:after
      content '”'
      left auto
      top auto
      right -10px
      bottom 0

// }}} END Taglines
